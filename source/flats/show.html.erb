<% flat = data.flats[owner] %>

<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,0,0,0.6) 0%, rgba(0,0,0,0.3) 50%), url('https://kitt.lewagon.com/placeholder/cities/random'); height: 50vh; background-position: center;">
</div>
<div class="header-flat">
  <div class="container">
  <div class="row">
    <div class="col-xs-4 col-xs-offset-1">
      <div class="flat-information">
        <div class="flat-owner">
          <%= image_tag "https://kitt.lewagon.com/placeholder/users/#{owner}", class: "img-circle" %>
          <p><%= flat.name %></p>
        </div>
        <div class="flat-description">
          <h1><%= flat.description %></h1>
          <p><%= flat.city_name %></p>
          <p class="rating">
            <i class="fa fa-star" style="color: #ffb400"></i>
            <i class="fa fa-star" style="color: #ffb400"></i>
            <i class="fa fa-star" style="color: #ffb400"></i>
            <i class="fa fa-star" style="color: #ffb400"></i>
            <i class="fa fa-star" style="color: #ffb400"></i>
          </p>
        </div>
      </div>
    </div>
    <div class="col-xs-3 col-sm-3">
      <form action="#">
          <h4>Book this flat</h4>
          <div class="form-group">
            <div class="row">
              <div class="col-xs-6">
                <input type="text" class="form-control" placeholder="checkin" id="checkin">
              </div>
              <div class="col-xs-6">
                <input type="text" class="form-control" placeholder="checkout">
              </div>
            </div>
          </div>
          <div class="form-group">
            <select name="" id="guests" class="form-control">
              <option value="1">1 guest</option>
              <option value="2">2 guests</option>
              <option value="3">3 guests</option>
            </select>
          </div>
          <input type="submit" class="btn btn-danger" value="Book it" style="width: 100%">
        </form>
    </div>
  </div>
  </div>
</div>
<div class="text-center flat-details">
  <div class="container">
    <div class="row">
      <div class="col-xs-6 col-xs-offset-1">
        <h1>about this flat</h1>
        <p><%= flat.detailed_description %></p>
      </div>
    </div>
    <div class="row" id="flat-data">
          <div class="col-xs-6 col-xs-offset-1">
            <h1>Amenities</h1>
          </div>
          <div class="col-xs-6 col-xs-offset-1">
            <ul class="list-inline">
              <li><i class="fa fa-cutlery"></i><strong>Kitchen</strong></li>
              <li><i class="fa fa-wifi"></i><strong>Wifi</strong></li>
              <li><i class="fa fa-desktop"></i><strong>TV</strong></li>
              <li><i class="fa fa-glass"></i><strong>Welcome drink</strong></li>
            </ul>
          </div>
        </div>
  </div>
</div>
